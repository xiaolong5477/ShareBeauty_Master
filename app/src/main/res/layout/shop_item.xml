<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <CheckBox
        android:layout_gravity="center_vertical"
        android:layout_marginRight="18dp"
        android:id="@+id/check_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/check_box_bg"
        android:button="@null"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_img_2"/>
    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="MEDIHEAL可莱丝 胶原蛋白"
                android:textSize="13sp"
                android:textColor="@color/shop_item_text_color"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="￥79"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="@color/shop_item_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="美白精华面膜"
                android:textSize="12sp"
                android:textColor="@color/shop_item_text_color"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="X9"
                android:gravity="right"
                android:textSize="13sp"
                android:textColor="@color/shop_item_text_color"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.sharebeauty.gxl.sharebeauty_master.CustomView.NumView
            android:layout_centerVertical="true"
            android:id="@+id/numview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trash"/>
        </RelativeLayout>
     </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/divider_color_1"/>
</LinearLayout>