<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/topbar"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/address_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单已提交"
                android:textColor="@color/shop_confirm_text_color"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请在 29 分 55 秒内完成支付"
                android:textSize="13sp"
                android:textColor="@color/shop_item_text_color"
                />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider_color_1"/>
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付金额："
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥790.00"
                android:textColor="@color/shop_price_text_color"
                />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider_color_1"/>
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择支付方式:"
            android:textSize="12sp"
            android:textColor="@color/shop_confirm_text_color"/>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider_color_1"/>
        <!-- 支付方式-->
        <RelativeLayout
            android:id="@+id/ZFB_BOX"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:drawableLeft="@drawable/order_detail_pay_alipay"
                android:gravity="center_vertical"
                android:text="支付宝"
                android:textColor="@color/Text_Dresser_Name"
                android:textSize="13sp" />
            <CheckBox
                android:layout_alignParentRight="true"
                android:id="@+id/pay_btn_ZFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/checkbox_state"
                android:button="@null"
                android:checked="true" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_color_1"></View>
        <RelativeLayout
            android:id="@+id/WX_BOX"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:drawableLeft="@drawable/order_detail_pay_wechat"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textColor="@color/Text_Dresser_Name"
                android:textSize="13sp" />
            <CheckBox
                android:layout_alignParentRight="true"
                android:id="@+id/pay_btn_WX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/checkbox_state"
                android:button="@null"
                />
        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider_color_1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider_color_1"/>
        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/Appointment_btn"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即支付"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@drawable/equ_btn_shape"/>

    </RelativeLayout>
</RelativeLayout>
