<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <com.jcodecraeer.xrecyclerview.XRecyclerView_SlideHead
        android:layout_marginBottom="45dp"
        android:id="@+id/recyclerview"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <include
        layout="@layout/topbar"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/base_bg_1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="立即购买"
            android:gravity="center"
            android:textColor="@color/shop_confirm_text_color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="加入购物车"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/Goods_Details_Btn"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_shop"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:gravity="center"
                    android:text="22"
                    android:background="@drawable/goods_shop_num"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
